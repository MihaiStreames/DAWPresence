{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DAWPresence",
  "version": "0.1.0",
  "identifier": "com.dawpresence.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "DAWPresence",
        "width": 1280,
        "height": 720,
        "minWidth": 750,
        "minHeight": 400,
        "resizable": true,
        "center": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["daws.json", "icons/green.png", "icons/red.png"]
  },
  "plugins": {}
}
